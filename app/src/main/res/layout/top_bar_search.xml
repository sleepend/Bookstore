<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/theme">

        <ImageView
            android:id="@+id/topbar_back"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:padding="@dimen/dp12"
            android:src="@drawable/ic_back" />

        <EditText
            android:id="@+id/topbar_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_toEndOf="@+id/topbar_back"
            android:background="@drawable/et_bg"
            android:drawableStart="@drawable/ic_query_tips"
            android:drawablePadding="@dimen/dp8"
            android:hint="请输入关键字"
            android:lines="1"
            android:maxEms="12"
            android:maxLength="12"
            android:minHeight="32dp"
            android:paddingStart="@dimen/dp8"
            android:paddingEnd="@dimen/dp8"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/topbar_search"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignEnd="@+id/topbar_search_view"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:minWidth="60dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/topbar_clear"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp4"
            android:layout_toStartOf="@+id/topbar_search"
            android:padding="6dp"
            android:src="@drawable/ic_clear" />
    </RelativeLayout>

</merge>