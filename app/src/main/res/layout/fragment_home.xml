<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="鱼书栈"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_bookstore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:background="#0000"
            android:padding="8dp"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/theme"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="84dp"
            android:layout_height="102dp"
            android:layout_marginStart="28dp"
            android:background="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="时间简史"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/home_image"
            app:layout_constraintTop_toTopOf="@id/home_image" />

        <TextView
            android:id="@+id/home_book_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="霍金*史蒂芬"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/home_book_name"
            app:layout_constraintTop_toBottomOf="@id/home_book_name" />

        <TextView
            android:id="@+id/home_book_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="正在阅读: "
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/home_book_name"
            app:layout_constraintTop_toBottomOf="@id/home_book_auth" />

        <TextView
            android:id="@+id/home_book_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一章"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/home_book_tips"
            app:layout_constraintTop_toTopOf="@id/home_book_tips" />

        <TextView
            android:id="@+id/home_book_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="100dp"
            android:padding="4dp"
            android:text="继续阅读"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/home_image"
            app:layout_constraintStart_toStartOf="@id/home_book_name" />

        <TextView
            android:id="@+id/home_book_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:enabled="true"
            android:gravity="center"
            android:minWidth="100dp"
            android:padding="4dp"
            android:text="全书缓存"
            android:textColor="@color/white_grey"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/home_book_read"
            app:layout_constraintTop_toTopOf="@id/home_book_read" />

        <TextView
            android:id="@+id/home_book_state"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_round"
            android:gravity="center"
            android:rotation="20"
            android:text="完结"
            android:textColor="#F63"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>