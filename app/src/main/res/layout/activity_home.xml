<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <View
            android:id="@+id/top_lines"
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_centerInParent="true"
            android:background="#515151" />

        <TextView
            android:id="@+id/top_bookcase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/top_lines"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="书架"
            android:textColor="@color/black_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/top_bookstore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/top_lines"
            android:button="@null"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="书栈"
            android:textColor="@color/black_grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/top_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_sort"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:padding="12dp"
            android:text="默认"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/top_setup"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/ic_setup" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef" />

    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>