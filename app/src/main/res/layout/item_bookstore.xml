<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_bs_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_40"
            android:paddingStart="12dp"
            android:paddingEnd="@dimen/dp_4"
            android:text="玄幻小说"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_bs_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:minWidth="64dp"
            android:text="更多>>"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="8dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/item_layout_1"
            style="@style/bookstore_layout">

            <ImageView
                android:id="@+id/item_layout_1_img"
                style="@style/bookstore_img" />

            <TextView
                android:id="@+id/item_layout_1_name"
                style="@style/bookstore_name"
                android:text="天下无双" />

            <TextView
                android:id="@+id/item_layout_1_auth"
                style="@style/bookstore_auth"
                android:text="虾米" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_layout_2"
            style="@style/bookstore_layout">

            <ImageView
                android:id="@+id/item_layout_2_img"
                style="@style/bookstore_img" />

            <TextView
                android:id="@+id/item_layout_2_name"
                style="@style/bookstore_name"
                android:text="天下无双" />

            <TextView
                android:id="@+id/item_layout_2_auth"
                style="@style/bookstore_auth"
                android:text="虾米" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_layout_3"
            style="@style/bookstore_layout">

            <ImageView
                android:id="@+id/item_layout_3_img"
                style="@style/bookstore_img" />

            <TextView
                android:id="@+id/item_layout_3_name"
                style="@style/bookstore_name"
                android:text="天下无双" />

            <TextView
                android:id="@+id/item_layout_3_auth"
                style="@style/bookstore_auth"
                android:text="虾米" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_layout_4"
            style="@style/bookstore_layout">

            <ImageView
                android:id="@+id/item_layout_4_img"
                style="@style/bookstore_img" />

            <TextView
                android:id="@+id/item_layout_4_name"
                style="@style/bookstore_name"
                android:text="天下无双" />

            <TextView
                android:id="@+id/item_layout_4_auth"
                style="@style/bookstore_auth"
                android:text="虾米" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_layout_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:visibility="gone" />
</LinearLayout>