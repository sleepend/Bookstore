<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lines_btm">

    <ImageView
        android:id="@+id/item_bk_img"
        android:layout_width="60dp"
        android:layout_height="@dimen/dp72"
        android:layout_margin="@dimen/dp12"
        android:src="@drawable/aaaaa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_bk_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp16"
        android:text="张三和李四"
        app:layout_constraintStart_toEndOf="@+id/item_bk_img"
        app:layout_constraintTop_toTopOf="@+id/item_bk_img" />

    <TextView
        android:id="@+id/item_bk_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp4"
        android:text="合合天一"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/item_bk_name"
        app:layout_constraintTop_toBottomOf="@+id/item_bk_name" />

    <TextView
        android:id="@+id/item_bk_newest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:text="第N单"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/item_bk_name"
        app:layout_constraintTop_toBottomOf="@id/item_bk_auth" />
</androidx.constraintlayout.widget.ConstraintLayout>