<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lines_btm"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_bc_img"
        android:layout_width="68dp"
        android:layout_height="84dp"
        android:layout_marginStart="4dp"
        android:background="@color/theme"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_bc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp12"
        android:text="测试标题"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/item_bc_img"
        app:layout_constraintTop_toTopOf="@+id/item_bc_img" />

    <TextView
        android:id="@+id/item_bc_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:text="测试名字222"
        android:textColor="@color/grey666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/item_bc_name"
        app:layout_constraintTop_toBottomOf="@id/item_bc_name" />

    <TextView
        android:id="@+id/item_bc_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:text="测试名字222"
        android:textColor="@color/grey666"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/item_bc_new"
        app:layout_constraintTop_toBottomOf="@id/item_bc_new" />

    <TextView
        android:id="@+id/item_bc_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/theme"
        app:layout_constraintStart_toStartOf="@id/item_bc_now"
        app:layout_constraintTop_toBottomOf="@id/item_bc_now" />

</androidx.constraintlayout.widget.ConstraintLayout>